<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ConcertMAUI.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ConcertMAUI.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ConcertMAUI">
    <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate views:MainPage}"
        Route="MainPage" />
    <ShellContent
        Title="Info"
        ContentTemplate="{DataTemplate views:ConcertInfoPage}"
        Route="ConcertInfoPage" />
    <ShellContent
        Title="BookingPage"
        ContentTemplate="{DataTemplate views:BookingPage}"
        Route="BookingPage" />
</Shell>
